<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:background="@color/pelakomakDarkBlue"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/ic_check" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/iran_sans"
            android:gravity="center"
            android:padding="10dp"
            android:text="برای شما هیچ تخلفی ثبت نشده است"
            android:textColor="@color/pelakomakWhite"
            android:textSize="15dp"
            android:textStyle="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/iconBlue" />

        <TextView
            android:id="@+id/congratulationsCloseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_for_dialog_ripple"
            android:fontFamily="@font/iran_sans"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:text="بستن"
            android:textColor="@color/pelakomakWhite"
            android:textSize="17dp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>