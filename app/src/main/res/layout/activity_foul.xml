<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foulActivityParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="خلافی اتومبیل"
            android:fontFamily="@font/dima_moalem"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/highLightBlue"
            android:textSize="30dp"
            />

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_for_ripple"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/highLightBlue"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_for_search_bar"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <EditText
            android:id="@+id/barcodeEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="#00FFFFFF"
            android:fontFamily="@font/iransans_number"
            android:gravity="center"
            android:hint="کد ۸ رقمی"
            android:inputType="number"
            android:layoutDirection="rtl"
            android:maxLength="8"
            android:padding="10dp"
            android:textColor="#fff"
            android:textColorHint="@color/white"
            android:textDirection="rtl"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/summaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_for_button"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/iransans"
            android:gravity="center"
            android:padding="5dp"
            android:text="وضعیت"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/getFoulsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:background="@drawable/background_for_button"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/iransans"
            android:gravity="center"
            android:padding="5dp"
            android:text="دریافت خلافی"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/helpButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_for_button"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/iransans"
            android:gravity="center"
            android:padding="5dp"
            android:text="راهنما"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="normal" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_dark_activity"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/iransans"
            android:gravity="center"
            android:text="اطلاعاتی موجود نیست"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/foulRecyclerView"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingTop="1dp"
            android:paddingRight="10dp"
            android:paddingBottom="1dp"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>
</LinearLayout>