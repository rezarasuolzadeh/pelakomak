<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_dark_dilog"
    android:orientation="vertical"
    android:paddingTop="40dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="19dp"
            android:src="@drawable/ic_dot" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/iran_sans"
            android:gravity="right"
            android:padding="10dp"
            android:text="شماره پلاک شما"
            android:textColor="@color/highLightBlue"
            android:textSize="15dp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_fragment_numberplate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_for_numberplate"
            android:layoutDirection="ltr">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/iran" />

            <TextView
                android:id="@+id/plaqueFirstTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/iran_sans_number"
                android:text="۱۲"
                android:textColor="#000000"
                android:textSize="50dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/plaqueSecondTextView"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:backgroundTint="#fff"
                android:ems="2"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/iran_sans_number"
                android:gravity="center"
                android:maxLength="1"
                android:text="ب"
                android:textColor="#000011"
                android:textSize="50dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/plaqueThirdTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/iran_sans_number"
                android:text="۳۶۵"
                android:textColor="#000"
                android:textSize="50dp"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:id="@+id/car_fir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_for_numberplate"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plaqueFourthTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:backgroundTint="#fff"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/iran_sans_number"
                    android:gravity="center"
                    android:maxLength="2"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="11"
                    android:textColor="#000011"
                    android:textSize="50dp"
                    android:textStyle="normal|bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="19dp"
            android:src="@drawable/ic_dot" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/iran_sans"
            android:gravity="right"
            android:padding="10dp"
            android:text="تعداد خلافی های شما"
            android:textColor="@color/highLightBlue"
            android:textSize="15dp"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/foulCountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/iran_sans_number"
        android:gravity="center"
        android:padding="5dp"
        tools:text="۱۲ مورد"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="19dp"
            android:src="@drawable/ic_dot" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/iran_sans"
            android:gravity="right"
            android:padding="10dp"
            android:text="هزینه خلافی های شما"
            android:textColor="@color/highLightBlue"
            android:textSize="15dp"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/foulPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/iran_sans_number"
        android:gravity="center"
        android:padding="5dp"
        tools:text="۱۲۰۰۰۰ تومان"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textSize="22dp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/highLightBlue" />

    <TextView
        android:id="@+id/summaryCloseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_for_dialog_ripple"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/iran_sans"
        android:gravity="center"
        android:padding="20dp"
        android:text="بستن"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

</LinearLayout>