<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pelakomakDarkBlue"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans"
            android:gravity="center"
            android:padding="15dp"
            android:text="ترتیب"
            android:textColor="@color/pelakomakWhite"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pelakomakDarkBlue"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <RadioButton
                android:id="@+id/recentFoulRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:buttonTint="@color/pelakomakLightBlue"
                android:fontFamily="@font/iran_sans"
                android:text="خلافی های اخیر"
                android:textColor="@color/pelakomakWhite"
                android:textSize="13dp"
                android:textStyle="normal" />

            <RadioButton
                android:id="@+id/expensiveFoulRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:buttonTint="@color/pelakomakLightBlue"
                android:fontFamily="@font/iran_sans"
                android:text="خلافی های پر هزینه"
                android:textColor="@color/pelakomakWhite"
                android:textSize="13dp"
                android:textStyle="normal" />

        </RadioGroup>
    </LinearLayout>
</androidx.cardview.widget.CardView>